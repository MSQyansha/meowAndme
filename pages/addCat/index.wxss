/* pages/addCat/index.wxss */

.cat_photo_view {
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  padding-bottom: 24rpx;
}

.cat_photo {
  flex: none;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 216rpx;
  height: 216rpx;
  background: rgba(229, 229, 229, 0.53);
  border-radius: 50%;
  position: relative;
}

.cat_img {
  width: 108rpx;
  height: 108rpx;
}

.photo_img {
  position: absolute;
  right: 12rpx;
  bottom: 15rpx;
  width: 34rpx;
  height: 29rpx;
}

.cat_name {
  text-align: center;
  padding-bottom: 40rpx;
  font-size: 46rpx;
}


.cropper-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100%;
  background: #000;
  z-index: 999;
}

.cropper-wrapper canvas {
  position: absolute;
  left: 0;
  top: 0;
}

.cropper-buttons {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 60px;
  line-height: 60px;
  background: #535353;
  color: #3CCB9B;
  padding: 0 50rpx;
  box-sizing: border-box;
  z-index: 10010;
}

.uploadAgain {
  color: #fff;
}

.uploadAgain,
.getCropperImage {
  width: 35%;
  line-height: 60px;
}

.getCropperImage {
  text-align: right;
}

.addCat_view {
  width: 100vw;
  height: 100vh;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #343434;
  font-size: 30rpx;
 
}

.addCat_view .row {
  margin: 0 40rpx;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #E9E9E9;
}

.row.no_border{
  border-bottom:none;
}

.row.other{
  padding-top: 40rpx;
  /* padding-bottom: 34rpx; */
}



.addCat_view .label {
  height: 49rpx;
  line-height: 49rpx;
  flex: none;
}

.addCat_view .ipt {
  flex: auto;
  height: 49rpx;
  line-height: 49rpx;
  padding-right: 10rpx;
}

.edit_tab {
  width: 114rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid #B6B6B6;
  background: #fff;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #B6B6B6;
  text-align: center;
  display: inline-block;
  margin-left: 24rpx;
}

.edit_tab.active {
  background: #3CCB9B;
  border: 1rpx solid #3ccb9b;
  color: #fff;
}

.ipt_weight {
  display: flex;
  justify-items: center;
  justify-content: flex-end;

}

.ipt_weight .ipt {
  width: 60rpx;
  height: 42rpx;
  line-height: 62rpx;
}

.tips{
  font-size:20rpx;
  color: #B6B6B6;
}

.row_btn{
  display: flex;
  justify-content: center;
}